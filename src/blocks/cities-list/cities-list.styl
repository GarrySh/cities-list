.cities-list
  font-size 20px
  font-family 'Arima Madurai', cursive
  min-width 400px
  margin 30px auto

.cities-list__input
  box-sizing border-box
  width 95%
  border 5px solid #eeeeee
  background-color white
  padding 10px 20px
  text-align: center;
  font inherit

.cities-list__suggestions
  padding 0
  margin 0
  width 95%
  position relative

.cities-list__suggestion
  display flex
  justify-content space-between
  align-items center
  box-sizing border-box
  margin 0
  padding 5px 10px
  list-style none
  border-bottom 2px solid #F7F7F7
  background-color white
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.14);

.cities-list__city-population
  font-size 14px
